# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.gs text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Exclude files from exports
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.cursorrules export-ignore

# Linguist overrides (GitHub language detection)
*.gs linguist-language=JavaScript
docs/** linguist-documentation
examples/** linguist-documentation
*.md linguist-documentation
